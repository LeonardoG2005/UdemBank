@model IEnumerable<UdemBank.Trade>

@{
    ViewData["Title"] = "Transacciones";
}

<h1>Transacciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nueva Transacción</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Grupo</th>
            <th>Tipo</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Saldo Actual</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Saving.User.Name</td>
            <td>@item.Saving.SavingGroup.Name</td>
            <td>
                @switch (item.Type)
                {
                    case Enums.TradeType.ConsignacionCuentaAhorro:
                        <span class="badge bg-primary">Consignación</span>
                        break;
                    case Enums.TradeType.TransferenciaGrupoAhorro:
                        <span class="badge bg-info">Transferencia</span>
                        break;
                    case Enums.TradeType.PrestamoGrupoAhorro:
                        <span class="badge bg-warning">Préstamo</span>
                        break;
                }
            </td>
            <td>$@item.Amount.ToString("N2")</td>
            <td>@item.Date.ToString("yyyy-MM-dd HH:mm")</td>
            <td>$@item.CurrentBalance.ToString("N2")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
