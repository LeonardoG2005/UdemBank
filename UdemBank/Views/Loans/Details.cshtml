@model UdemBank.Loan

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<h1>Detalles del Préstamo</h1>

<div>
    <h4>Préstamo #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Saving.User.Name</dd>
        <dt class="col-sm-2">Grupo de Ahorro</dt>
        <dd class="col-sm-10">@Model.Saving.SavingGroup.Name</dd>
        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">$@Model.Amount.ToString("N2")</dd>
        <dt class="col-sm-2">Fecha del Préstamo</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>
        <dt class="col-sm-2">Fecha de Vencimiento</dt>
        <dd class="col-sm-10">@Model.DueDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Saldo Actual</dt>
        <dd class="col-sm-10">$@Model.CurrentBalance.ToString("N2")</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">
            @if (Model.Paid)
            {
                <span class="badge bg-success">Pagado ✓</span>
            }
            else
            {
                <span class="badge bg-warning">Pendiente de Pago</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
